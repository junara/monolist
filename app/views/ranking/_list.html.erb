<div class="container">
  <div class="container-inner inner-default clearfix">
    <% number_of_rank = 0 %>
    <% items.each do |i| %>
      <% item = i[0] %>
      <% number_of_rank = number_of_rank + 1 %>
      <% number_of_item = i[1] %>
      <div class="item-box">
        <div class="ranking">
          <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
          <%= number_of_rank %>‰Ωç
        </div>
        <div class="image">
          <div class="img-wrap">
            <% if item.large_image.present? %>
              <%= image_tag(item.large_image , alt: item.title) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: item.title) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= item.title %>
          </p>
        </div>
        <%= render 'items/action' , item: item if logged_in? %>
      </div>
    <% end %>
  </div>
</div>