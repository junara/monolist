<div class="container">
  <div class="container-inner inner-default clearfix">
    <% amazon_items.each do |item| %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <% #DONE 商品画像 %>
            <% large_image_url = item.get('LargeImage/URL') %>
            <% if large_image_url.present? %>
              <%= image_tag( large_image_url , alt: item.get('ItemAttributes/Title')) %>
            <% else %>
              <%= image_tag( 'no-image.png', alt: item.get('ItemAttributes/Title')) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <% #TODO 商品タイトル %>
            <% amazon_title_name = item.get('ItemAttributes/Title') %>
            <% if amazon_title_name.present? %>
              <%= amazon_title_name %>
            <% else %>
              商品名不明
            <% end %>
          </p>
        </div>
        <div class="action clearfix">
          <%= link_to "" , ownerships_path(asin: item.get('ASIN') , type: "Want") ,
                      :class => "want-#{item.get('ASIN')} btn-want btn btn-danger btn-sm want",
                      :remote => true,
                      :method => :post %>
          <%= link_to "" , ownerships_path(asin: item.get('ASIN') , type: "Have") ,
                      :class => "have-#{item.get('ASIN')} btn-have btn btn-warning btn-sm have",
                      :remote => true,
                      :method => :post %>
        </div>
      </div>
    <% end %>
  </div>
</div>