<% content_for :head do %>
  <title><%= @item.title %></title>
  <meta name="description" content="<%= @item.title %>に関する情報。この商品をほしい人、持っている人を表示しています。">
<% end %>


<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #DONE 商品イメージ %>
            <% large_image_url = @item[ :large_image ] %>
            <% if large_image_url.present? %>
              <%= image_tag( large_image_url , alt: @item[:title] ) %>
            <% else %>
              <%= image_tag( 'no-image.png', alt: @item[:title] ) %>
            <% end %>

        </div>
      </div>
      <div class="title">
        <% #DONE 商品タイトル %>
        <%= @item[:title] %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>

        <% @item.have_users.each do |user| %>
          <%= render partial: 'user_list', locals: { user: user } %>
        <% end %>

        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
        <% @item.want_users.each do |user| %>
          <%= render partial: 'user_list', locals: { user: user } %>
        <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #DONE 正しいリンク先に %>
        <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
